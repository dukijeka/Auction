@model Auction.Models.IndexViewModel

@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

@if (ViewBag.StatusMessage != null && ViewBag.StatusMessage != "")
{
    <p class="alert alert-success">@ViewBag.StatusMessage</p>
}

@if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != "")
{
    <p class="alert alert-danger">@ViewBag.ErrorMessage</p>
}

@using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Name and Surname</h4>
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" name="newName" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Name" class="btn btn-default" />
        </div>
    </div>
}

@using (Html.BeginForm("ChangeEmail", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Email</h4>
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <input type="email" name="newEmail" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Email" class="btn btn-default" />
        </div>
    </div>
}
