        <select class="form-control" id="state" name="state">
            <option value="" selected> -- select an option -- </option>
            <option>READY</option>
            <option>OPENED</option>
            <option>CLOSED</option>
        </select>
    </div>
    <input type="checkbox" name="transactionsIWon" /> Transaction I Won*
